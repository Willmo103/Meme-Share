<!DOCTYPE html>
<html lang="en">
{% include 'head.jinja' %}

<body class="dark:bg-black bg-white text-gray-900 dark:text-gray-100 flex flex-row items-center justify-center h-full">

    <div class="h-full mt-16 py-4 w-auto bg-white dark:bg-black flex flex-col justify-center items-center">
        <div
            class="bg-white dark:bg-black border rounded border-gray-300 dark:border-gray-600 w-80 py-6 flex items-center flex-col mb-3 mt-3">
            <h1 class="text-6xl font-billabong text-black dark:text-white mb-2">{{ title }}</h1>
            <form class="mt-8 w-auto flex flex-col mb-2" action="{{ url_for('routes.register') }}" method="POST">

                {{ form.hidden_tag() }}

                {{ form.username(class="text-xs w-full mb-2 rounded border bg-white dark:bg-gray-700 border-gray-300
                dark:border-black px-2 py-2
                focus:outline-none
                focus:border-gray-400 active:outline-none text-black dark:text-gray-300", placeholder="Username") }}

                {{ form.email(class= "text-xs w-full mb-2 rounded border bg-white dark:bg-gray-700 border-gray-300
                dark:border-black px-2 py-2
                focus:outline-none
                focus:border-gray-400 active:outline-none text-black dark:text-gray-300", placeholder="Email") }}

                {{ form.password(class="text-xs w-full mb-2 rounded border bg-white dark:bg-gray-700 border-gray-300
                dark:border-black px-2 py-2
                focus:outline-none
                focus:border-gray-400 active:outline-none text-black dark:text-gray-300", placeholder="Password") }}

                {{ form.confirm_password(class="text-xs w-full mb-4 rounded border bg-white dark:bg-gray-700
                border-gray-300
                dark:border-black px-2 py-2
                focus:outline-none
                focus:border-gray-400 active:outline-none text-black dark:text-gray-300", placeholder="Confirm
                Password") }}

                {{ form.submit(class="text-sm text-center bg-blue-300 dark:bg-gray-400 text-white dark:text-gray-900
                py-1
                mt-2
                rounded font-medium",
                value="Register")
                }}

            </form>
        </div>
    </div>
</body>
